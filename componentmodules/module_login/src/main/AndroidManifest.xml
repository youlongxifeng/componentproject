<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.component.preject.youlong.login">
    <!-- 请求网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 不是SDK需要的权限，是示例中的后台唤醒定位需要的权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.login.ui.acitivity.login.LogInActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustUnspecified|stateHidden"
        ></activity>
        <activity android:name=".ui.activity.login.ui.acitivity.register.RegisterActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustUnspecified|stateHidden"
        ></activity>
        <activity android:name=".ui.activity.login.ui.acitivity.retrieve.RetrieveActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity android:name=".ui.activity.login.ui.acitivity.resetpwd.ResetPwdActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
    </application>
</manifest>
