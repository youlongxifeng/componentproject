<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_status_layout_exception_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/svg_status_exception"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:scaleType="fitCenter"
        android:src="@drawable/date_empty" />

     <TextView
         android:id="@+id/text_status_layout_exception_refresh"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/shader_refresh"
         android:paddingLeft="18dp"
         android:paddingTop="4dp"
         android:paddingRight="18dp"
         android:paddingBottom="4dp"
         android:text="@string/statue_refresh"
         android:textColor="@android:color/white" />




</LinearLayout>