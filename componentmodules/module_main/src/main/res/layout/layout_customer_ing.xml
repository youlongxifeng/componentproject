<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/svg_status_loading"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:padding="@dimen/dp_32"
        android:scaleType="fitCenter"
        android:src="@drawable/loading_icon" />

    <com.component.preject.youlong.main.view.dataview.SpreadTextView
        android:id="@+id/spread_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:spread_text_color="#7c7c7c"
        app:spread_text_size="16sp"
        android:layout_marginTop="@dimen/dp_20"
        app:spread_text_value="@string/statue_loading" />

</LinearLayout>